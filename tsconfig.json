{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "pretty": true,
    "rootDir": ".",
    "watch": false,
    "sourceMap": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2017"
    ],
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
